<div class="col-12 mb-4 form-group pmd-textfield pmd-textfield-outline">
    <label class="form-label font-weight-bold" for="email-address">
        Email Address:
    </label>
    <span id="<%- TagNamePrefixData %>email-address-span" class="asterisk ml-1 font-weight-bold text-danger">
        *
    </span>
    <input type="text" id="<%- TagNamePrefixData %>email-address" name="email-address" class="form-control" 
            placeholder=" email-address@xyz.com">
</div>

<div class="col-12 mb-4 form-group pmd-textfield pmd-textfield-outline">
    <%
    if (TagNamePrefixData == "password-reset-")
    {
        %>
        <label class="form-label font-weight-bold" for="password">
            New Password:
        </label>
        <span id="<%- TagNamePrefixData %>password-span" class="asterisk ml-1 font-weight-bold text-danger">
            *
        </span>
        <input type="Password" id="<%- TagNamePrefixData %>password" name="password" class="form-control" 
                    placeholder=" New Password">
        <%
    }
    else
    {
        %>
        <label class="form-label font-weight-bold" for="password">
            Password:
        </label>
        <span id="<%- TagNamePrefixData %>password-span" class="asterisk ml-1 font-weight-bold text-danger">
            *
        </span>
        <input type="Password" id="<%- TagNamePrefixData %>password" name="password" class="form-control" 
                placeholder=" Password">
        <%
    }
    %>
</div>